<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.appgps.MainActivity"
    android:background="#9650c3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:id="@+id/textViewLat"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#1bb6ce"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:id="@+id/textViewLong"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#1bb6ce"
        android:layout_below="@+id/editTextLat"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/editTextLat"
        android:layout_below="@+id/textViewLat"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/editTextLong"
        android:layout_below="@+id/textViewLong"
        android:layout_alignParentStart="true" />

    <!--android:background="@drawable/but"-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locate"
        android:id="@+id/butLoc"
        android:textStyle="bold"
        android:allowUndo="false"
        android:textColor="#211bce"
        android:textSize="20dp"
        android:typeface="sans"
        android:singleLine="false"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textViewResult" />


    <!--android:background="@drawable/but"-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/butMap"
        android:textStyle="bold"
        android:allowUndo="false"
        android:textColor="#211bce"
        android:textSize="20dp"
        android:typeface="sans"
        android:singleLine="false"
        android:layout_alignBottom="@+id/editTextLong"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice"
        android:id="@+id/butCallVoice"
        android:textColor="#211bce"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/butLoc" />

    <TextView
        android:layout_width="600dp"
        android:layout_height="120dp"
        android:id="@+id/textViewResult"
        android:background="#e1772b"
        android:padding="2dp"
        android:elegantTextHeight="false"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
